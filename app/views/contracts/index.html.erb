

<div class="span10">
<!--Body content-->

    <!--<div id="container" class="container-fluid">

    <div style="float: right; margin-bottom: 10px">         
        <button id="enable" class="btn">enable/disable edit</button>
    </div>-->
    <%if @permanent == '1'%>
        <h2>Listing Permanent Contracts </h2>
    <% else %>
        <h2>Listing Proposed Contracts </h2>
    <% end %>
    <table id="tb" class="table table-striped table-condensed table-hover table-bordered" cellspacing="0">
        <thead>
        <tr>
            <th class='hed'></th>
            <th class='hed'># of Contract </th>
            <th class='hed'>Client </th>
            <th class='hed'>Product </th>
            <%if @permanent == '1'%>
                    <th class='hed'>Contract execute date </th> 
            <% end %>
            <th class='hed'>Real cust_id </th>
            <th class='hed'>Sales </th>
            <th class='hed'>Creating date </th>
            <th class='hed'>Send date </th>
            <th class='hed'>Sign date </th>
            <th class='hed'>File Version </th>
            <th class='hed'>File
            <!--
            <th class='hed'>BAA date </th>
            <th class='hed'>Contract execute date </th>
            <th class='hed'>Status </th>
            <th class='hed'>Comment </th>
            -->
            <th class='hed'></th>
        </tr>
        </thead>
        <tbody>

            <% @contracts.each do |contract| %>
             <% contract.sows.each do |sow| %>
              <tr>
                <td><%= link_to raw('<i class="icon-arrow-right"></i>'), edit_contract_path(contract)  %></td> 
                <td><%= contract.id %></td>
                <td><%= contract.client.name_with_state %></td>
                <td><%= Product.find(sow.product_id).name.upcase %></td>
                <%if @permanent == '1'%>
                    <td><%= contract.contract_execute_date %></td>
                <% end %>
                 <td><%= contract.client.cust_id %></td>
                 <td><%= contract.client.list_of_sales %></td>
                <td>
                   <%= contract.created_at %>
                </td>
                <td>
                   <%= contract.contract_send_at %>
                </td>
                <td>
                   <%= contract.contract_sign_at %>
                </td>
                 <td>
                   <%= "V #{contract.contractfiles.count}" %>
                </td>
                <td>
                    <%= link_to "Download", "#{contract.contractfiles.last.file}" %>
                </td>
                 <% if false %>
                      <td>
                         <div id="baa_date" class="ct_date" data-resource="contract" data-type="date" data-pk="1"  data-url="/contracts/<%= contract.id %>" data-value = "<%= contract.baa_date %>" >
                        </div>
                        </td>
                     <td>
                         <div id="contract_execute_date" class="ct_date" data-resource="contract" data-type="date" data-pk="1"  data-url="/contracts/<%= contract.id %>" data-value = "<%= contract.contract_execute_date %>" >
                        </div>
                    </td>
                    <td><%= contract.status %></td>
                    <td><%= contract.comment %></td>
                <% end%>
                <%if @permanent == '1'%>
                    <td><%= link_to raw('<i class="icon-trash "></i>'), contract_path(contract,:permanent => '1'),  method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% else %>
                    <td><%= link_to raw('<i class="icon-trash "></i>'), contract_path(contract) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
              <% end %>
            <% end %>
         </tbody>
    </table>

    <br />

<script>
    $('#tb tbody tr:odd').css("backgroundColor","#fcf8e3");
    $('#tb tbody tr:even').css("backgroundColor","#d9edf7");

    $(function(){
        $('.ct_date').editable({
            ajaxOptions: {
                type: 'PUT'
            },
            format: 'yyyy-mm-dd',    
            viewformat: 'dd/mm/yyyy',    
            datepicker: {
                    weekStart: 1
            }

        });
        $('#enable').click(function() {
            $('#tb .editable').editable('toggleDisabled');
        });  
        $('.ct_description').editable({
            ajaxOptions: {
                type: 'PUT'
            },
            title: 'Enter Description',

        });
                $('#tb .editable').editable('toggleDisabled');
    });
</script>

</div>
</div>